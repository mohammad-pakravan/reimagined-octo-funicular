# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=telecaht_user
MYSQL_PASSWORD=telecaht_pass
MYSQL_DATABASE=telecaht

# Database Connection Pool Configuration
DB_POOL_SIZE=150
DB_MAX_OVERFLOW=50

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# MinIO Configuration (External Server)
# MINIO_ENDPOINT: Endpoint for connecting to MinIO server (e.g., your-minio-server.com:9000)
# MINIO_PUBLIC_URL: Public URL accessible from internet (e.g., https://your-minio-server.com:9000)
MINIO_ENDPOINT=your-minio-server.com:9000
MINIO_PUBLIC_URL=https://your-minio-server.com:9000
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
MINIO_BUCKET_NAME=profile-images
MINIO_USE_SSL=true

# Channel Configuration (users must join this channel)
MANDATORY_CHANNEL_ID=@your_channel_username

# Admin Configuration (comma-separated Telegram user IDs)
ADMIN_IDS=123456789,987654321

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
VIDEO_CALL_DOMAIN=https://your-domain.com
API_SECRET_KEY=your-secret-key-change-this

# Premium Configuration
PREMIUM_PRICE=10000.0
PREMIUM_DURATION_DAYS=30

# Chat Configuration
MAX_CHAT_DURATION_MINUTES=60
PREMIUM_CHAT_DURATION_MINUTES=180
MATCHMAKING_TIMEOUT_SECONDS=300

# Cost Configuration
CHAT_REQUEST_COST=1
DIRECT_MESSAGE_COST=1

# Matchmaking Worker Configuration
MATCHMAKING_WORKER_INTERVAL=1
MATCHMAKING_WORKER_BATCH_SIZE=5

# Matchmaking Backend
# Options: redis, memory
MATCHMAKING_BACKEND=redis

# Matchmaking Probability Configuration
# Probability (0.0-1.0) for girls to match with boys in random chat when no boy-boy pairs exist
# Lower values = harder for girls to match with boys (e.g., 0.1 = 10%, 0.3 = 30%)
RANDOM_GIRL_BOY_MATCH_PROBABILITY=0.3

# No-Rematch Rule Configuration
# Enable/disable the rule that prevents users from matching again within a cooldown period
ENABLE_NO_REMATCH_RULE=true
# Number of hours that must pass before two users can be matched again
NO_REMATCH_HOURS=7

# Rate Limiting
RATE_LIMIT_MESSAGES_PER_MINUTE=20

# phpMyAdmin Configuration
# Username and password for accessing phpMyAdmin web interface
PHPMYADMIN_USER=admin
PHPMYADMIN_PASSWORD=changeme

